<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dim_gray"
    android:layoutDirection="ltr"
    tools:context=".MenuActivity">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_name"
        android:textSize="@dimen/title_size"
        android:textColor="@color/dark_orange"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/game_name_margin_top">
    </com.google.android.material.textview.MaterialTextView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/main_LBL_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fast Mode : OFF"
        tools:ignore="HardcodedText"
        android:textColor="@color/white"
        android:layout_marginEnd="10dp"
        android:textSize="20sp"
        android:layout_marginStart="100dp"
        android:layout_above="@id/main_LO_buttons"
        android:layout_marginBottom="11dp">
    </com.google.android.material.textview.MaterialTextView>

    <com.google.android.material.materialswitch.MaterialSwitch
        android:id="@+id/main_SWI_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="250dp"
        android:textSize="20sp"
        android:layout_above="@id/main_LO_buttons"
        android:textColor="@color/white"
        app:thumbTint="@color/dark_orange"
        app:trackTint="@color/white">
    </com.google.android.material.materialswitch.MaterialSwitch>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/main_LO_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_BTN_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="@color/dark_orange"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:text="Button Mode"
            tools:ignore="HardcodedText">
        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/main_BTN_sensor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="@color/dark_orange"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:text="Sensor Mode"
            tools:ignore="HardcodedText">
        </com.google.android.material.button.MaterialButton>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_BTN_records"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_LO_buttons"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/dark_orange"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:text="Records"
        tools:ignore="HardcodedText">
    </com.google.android.material.button.MaterialButton>

</RelativeLayout>